/*toast样式表*/
.weui-toast-wrapper{
    position: absolute;
    top:0;
    left:0;
    right:0;
    bottom:0;
    z-index : 1010;
    display: block;
}
.weui-toast-text .weui-toast{
    width: 12em;
    min-height: 0;
    padding:20px;
    text-overflow: ellipsis;
}

.weui-toast-text .weui-toast__content{
    margin:0
}
.weui-toast-text .weui-icon_toast{
    display: none;
}
.weui-toast{
    position: fixed;
    z-index:5000;
     width:7.6em;
    min-height: 7.6em;
    top:180px;
    left: 50%;
    margin-left: -3.8em;
    background-color: rgba(40,40,40,.75);
    text-align: center;
    border-radius: 5px;
    color: #fff;
}
.weui-icon_toast{
    margin-top: 10px;
    margin-bottom: 7px;
    display: block;
}
.weui-icon_toast.weui-icon-success-no-circle:before{
    color:#fff;
    font-size: 55px;
}
.weui-icon_toast.weui-loading{
    margin:30px 0 0;
    width:38px;
    height:38px;
    vertical-align:baseline;
}
.weui-toast__content{
    margin: 0 0 15px;
}